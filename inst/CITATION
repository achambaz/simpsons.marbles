year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "Simpson's Marbles",
         author = c(person("Antoine", "Chambaz"),
                    person("Isabelle", "Drouet"),
                    person("Sonia", "Memetea")),
         year = year,
         note = note,
         url = "none")
